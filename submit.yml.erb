---
<%
  gpus = num_gpus.blank? ? 0 : num_gpus.to_i
%>
batch_connect:
  template: vnc
script:
  native:
    - "-A<%= slurm_account %>"
    - "-p<%= slurm_partition %>"
    - "-N 1"
    - "-c <%= bc_num_cores %>"
    - "--mem=<%= mem %>"
    - "-d singleton"
    - "--job-name=<% CRYOSPARC_DATADIR %>"
    <% if gpus > 0 %>- "--gpus=<%= gpus %>"<% end %>
    <% if slurm_reservation.blank? %>- "--reservation=<%= slurm_reservation %>"<% end %>
