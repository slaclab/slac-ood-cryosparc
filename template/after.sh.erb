port_used(){
  nc -w 2 "$1" "$2" < /dev/null > /dev/null 2>&1
}
 
find_port () {
  local host="${1:-localhost}"
  local port_low="${2:-2000}"
  local step="${3:-100}"
  local port=${port_low}
  while port_used ${host} ${port}; do
    port=$(( $port + $step ))
  done
  echo "${port}"
}
  
